<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="wrap_content"
        tools:context=".OfferActivity">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140sp"
            android:background="@drawable/loginpagebox"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate Fooditems"
                android:textSize="30sp"
                android:textColor="@color/black"

                android:layout_margin="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Name   :"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/inputname"
                        android:layout_width="303dp"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Description :"
                        android:textColor="@color/black"

                        android:textSize="22sp"/>
                    <EditText
                        android:id="@+id/inputroomid"
                        android:layout_width="303dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Address   :"
                        android:textColor="@color/black"

                        android:textSize="22sp"/>
                    <EditText
                        android:id="@+id/inputmobileno"
                        android:layout_width="303dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:text="Food Quantity :"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>
                    <EditText
                        android:id="@+id/inputedob"
                        android:layout_width="303sp"
                        android:layout_height="48sp"
                        android:inputType="date"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:text="Date :"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>

                    <EditText
                        android:id="@+id/inputedob1"
                        android:layout_width="303sp"
                        android:layout_height="48sp"
                        android:inputType="date"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:text="Code :"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>
                    <EditText
                        android:id="@+id/inputedob2"
                        android:layout_width="303sp"
                        android:layout_height="48sp"
                        android:inputType="date"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadowlayout"

                        />
                </LinearLayout>

                <Button
                    android:layout_weight="1"
                    android:id="@+id/addroomsubmitbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15sp"
                    android:text="Submit"

                    android:textSize="20sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</ScrollView>